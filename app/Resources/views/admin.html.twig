<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}{{ sitename }}{% endblock %}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Site web du Longchamp Roller Team">
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/site/css/bootstrap.css') }}" type="text/css" media="screen" />
    <link rel="stylesheet" href="{{ asset('bundles/admin/css/common.css') }}" type="text/css" media="screen" />
    {% endblock %}
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="{{ asset('web/js/html5.js') }}"></script>
    <![endif]-->
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fuild">
            <a class="btn btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{ path('dashboard') }}">
                <i class="icon-home icon-white"></i>
                {{ sitename }}
            </a>
            <div class="nav-collapse">
                <ul class="nav">
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                            <i class="icon-folder-close icon-white"></i>
                            Contenu
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ path('article') }}">
                                    <i class="icon-book"></i>
                                    Tous les articles
                                </a>
                            </li>
                        </ul>
                    </li>
                    {% if is_granted("ROLE_SUPERVISEUR") or is_granted("ROLE_ADMIN") %}
                    <li>
                        <a href="{{ path('user') }}" title="Utilisateurs">
                            <i class="icon-user icon-white"></i>
                            Utilisateurs
                        </a>
                    </li>
                    {% endif %}
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                            <i class="icon-bullhorn icon-white"></i>
                            Evènement(s)
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('event') }}"><i class="icon-calendar"></i> Tous les évènements</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('event_new') }}"><i class="icon-plus"></i> Ajouter un évènement</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                            <i class="icon-play-circle icon-white"></i>
                            Videos
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('video') }}"> <i class="icon-list"></i> Toutes les vidéos</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('video_new') }}"><i class="icon-plus"></i> Ajouter une vidéo</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav pull-right">
                    <li class="divider-vertical hidden-phone hidden-tablet"></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">
                            <span class="icon-user icon-white"></span>
                            Mon Compte
                            <span class="label label-important">2</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu dropdown-user-info">
                            <li class="menu-account-info visible-desktop">
                                <div class="row-fluid">
                                    <div class="span1">&nbsp;</div>
                                    <div class="span4"><img src="{{ asset('bundles/admin/img/no_picture.png') }}"></div>
                                    <div class="span1">&nbsp;</div>
                                    <div class="span6">
                                        <h3>{{ app.user.firstName }}</h3>
                                        <span class="badge badge-success">0</span> vidéo
                                        <br>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span6 center">
                                        <a class="btn btn-primary btn-small" href="{{ path('user_profile_edit', { 'id': app.user.id }) }}">
                                            <span class="icon-edit icon-white"></span>
                                            Modifier mon profil
                                        </a>
                                    </div>
                                    <div class="span6 center">
                                        <a class="btn btn-danger btn-small" href="{{ path('fos_user_security_logout') }}">
                                            <span class="icon-off icon-white"></span>
                                            Se deconnecter
                                        </a>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <a href="{{ path('user_profile_show', { 'id': app.user.id }) }}"><span class="icon-user"></span> Mon profil</a>
                            </li>
                            <li>
                                <a href="#"><span class="icon-film"></span> Mes vidéos</a>
                            </li>
                            <li>
                                <a href="#"><span class="icon-book"></span> Mes articles</a>
                            </li>
                            <li class="divider"></li>
                            <li><a href="#"><span class="icon-envelope"></span> Mes messages <span class="label label-important">2</span></a></li>
                            <li><a href="#"><span class="icon-pencil"></span> Nouveau message</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-search pull-left">
                    <input type="text" class="search-query" placeholder="Search">
                </form>
            </div>
        </div>
    </div>
</div>
{%  endif %}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    {% block menu %}{% endblock %}
                </ul>
            </div>
        </div>
        <div class="span10">
            <!--<div>
                <ul class="breadcrumb">
                    <li class="first">
                        <i class="icon-home"></i>
                        <a href="{{ path('dashboard') }}">Tableau de bord</a> <span class="divider">/</span>
                    </li>
                    {% block breadcrumb %}{% endblock %}
                </ul>
            </div>-->
            {% block body %}{% endblock %}
            <!-- modal -->
            <div id="box" class="modal hide fade" role="dialog">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 id="myModalLabel"></h3>
                </div>
                <div class="modal-body"></div>
            </div>
            <!-- modal -->
        </div>
    </div>
</div>
{% block javascripts %}
    <script src="{{ asset('bundles/site/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/admin/js/bootstrap/bootstrap.min.js') }}"></script>
    <!-- Plugins -->
    <script src="{{ asset('bundles/admin/js/plugins/maskedinput/jquery.maskedinput-1.3.min.js') }}"></script>
    <script src="{{ asset('bundles/admin/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js') }}"></script>
    <script src="{{ asset('bundles/admin/js/plugins/jquery.mousewheel.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/cms/js/plugins/ckeditor/ckeditor.js') }}"></script>
    <!-- Common -->
    <script src="{{ asset('bundles/site/js/admin/simplenso.js') }}"></script>
    <script src="{{ asset('bundles/admin/js/common.js') }}"></script>
{% endblock %}
</body>
</html>