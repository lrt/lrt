<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}{{ sitename }}{% endblock %}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Site web du Longchamp Roller Team">
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/admin/css/normalize.css') }}" type="text/css" media="screen" />
    <link rel="stylesheet" href="{{ asset('bundles/admin/css/bootstrap/bootstrap.css') }}" type="text/css" media="screen" />
    <link rel="stylesheet" href="{{ asset('bundles/admin/css/bootstrap/bootstrap-responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/admin/css/common.css') }}" type="text/css" media="screen" />
    {% endblock %}
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="{{ asset('web/js/html5.js') }}"></script>
    <![endif]-->
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fuild">
            <a class="btn btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{ path('home') }}">
                {{ sitename }}
            </a>
            <div class="nav-collapse">
                <ul class="nav">
                    {% if is_granted("ROLE_SUPERVISEUR") %}
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                            <i class="icon-folder-close icon-white"></i>
                            Gestion de l'association
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#">
                                    <i class="icon-user"></i>
                                    Tous les membres
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('partner') }}">
                                    <i class="icon-user"></i>
                                    Tous les partenaires
                                </a>
                            </li>
                        </ul>
                    </li>
                    {% endif %}
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                            <i class="icon-play-circle icon-white"></i>
                            Videos
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('video') }}"> <i class="icon-list"></i> Toutes les vidéos</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('video_new') }}"><i class="icon-plus"></i> Ajouter une vidéo</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav pull-right">
                    <li class="divider-vertical hidden-phone hidden-tablet"></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">
                            <span class="icon-user icon-white"></span>
                            Mon Compte
                            <span class="label label-important">2</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu dropdown-user-info">
                            <li class="menu-account-info visible-desktop">
                                <div class="row-fluid">
                                    <div class="span4"><img src="{{ asset('bundles/admin/img/no_picture.png') }}" alt="Photos de profil"></div>
                                    <div class="span8">
                                        <h4>{{ app.user.firstName }} {{ app.user.lastName }}</h4>
                                        <p>{{ app.user.email }}</p>
                                        <a class="btn btn-primary btn-small" href="{{ path('user_profile_edit', { 'id': app.user.id }) }}">
                                            <span class="icon-edit icon-white"></span>
                                            Modifier mon profil
                                        </a>
                                        <br>
                                    </div>
                                </div>
                            </li>
                            <li class="visible-desktop">
                                <a class="btn btn-small pull-right" href="{{ path('fos_user_security_logout') }}">
                                    <span class="icon-off"></span>
                                    Déconnexion
                                </a>
                            </li>
                            <li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="sidebar left">
        <ul class="nav nav-tabs nav-stacked">
            <li class="active">
                <a href="{{ path('user_profile_show', { 'id': app.user.id }) }}">
                    <div>
                        <div class="ico">
                            <img src="{{ asset('bundles/admin/img/ico/ico-home.png') }}" alt="Page d'accueil">
                        </div>
                        <div class="title">
                            Accueil
                        </div>
                    </div>

                    <div class="arrow">
                        <div class="bubble-arrow-border"></div>
                        <div class="bubble-arrow"></div>
                    </div>
                </a>
            </li>
            <li>
                <a href="{{ path('event') }}" title="">
                    <div>
                        <div class="ico">
                            <img src="{{ asset('bundles/admin/img/ico/ico-notification.gif') }}" alt="Evenements">
                        </div>
                        <div class="title">
                            Evènements
                        </div>
                    </div>

                    <div class="arrow">
                        <div class="bubble-arrow-border"></div>
                        <div class="bubble-arrow"></div>
                    </div>
                </a>
            </li>
            <li>
                <a href="{{ path('article') }}">
                    <div>
                        <div class="ico">
                            <img src="{{ asset('bundles/admin/img/ico/ico-news.png') }}" alt="Articles">
                        </div>
                        <div class="title">
                            Articles
                        </div>
                    </div>

                    <div class="arrow">
                        <div class="bubble-arrow-border"></div>
                        <div class="bubble-arrow"></div>
                    </div>
                </a>
            </li>
            {% if is_granted("ROLE_ADMIN") %}
                <li>
                    <a href="{{ path('user') }}">
                        <div>
                            <div class="ico">
                                <img src="{{ asset('bundles/admin/img/ico/ico-user.gif') }}" alt="Utilisateurs">
                            </div>
                            <div class="title">
                                Utilisateurs
                            </div>
                        </div>

                        <div class="arrow">
                            <div class="bubble-arrow-border"></div>
                            <div class="bubble-arrow"></div>
                        </div>
                    </a>
                </li>
            {% elseif is_granted("ROLE_SUPERVISEUR") %}
                <li>
                    <a href="{{ path('adhesion_display') }}">
                        <div>
                            <div class="ico">
                                <img src="{{ asset('bundles/admin/img/ico/ico-user.gif') }}" alt="Membres">
                            </div>
                            <div class="title">
                                Membres
                            </div>
                        </div>

                        <div class="arrow">
                            <div class="bubble-arrow-border"></div>
                            <div class="bubble-arrow"></div>
                        </div>
                    </a>
                </li>
            {% endif %}
            <li>
                <a href="#">
                    <div>
                        <div class="ico">
                            <img src="{{ asset('bundles/admin/img/ico/ico-media.gif') }}" alt="Media">
                        </div>
                        <div class="title">
                            Media
                        </div>
                    </div>
                    <div class="arrow">
                        <div class="bubble-arrow-border"></div>
                        <div class="bubble-arrow"></div>
                    </div>
                </a>
            </li>
            <li>
                <a href="#" id="btn-more" data-original-title="Some test title text" style="display: block;">
                    <div>
                        <div class="ico">
                            <img src="{{ asset('bundles/admin/img/ico/ico-more.png') }}" alt="Plus">
                        </div>
                        <div class="title">
                            Plus
                        </div>
                    </div>
                </a>

            </li>
        </ul>
    </div>
    <div class="content round-all shadow">
        {% for message in app.session.flashbag.get('error') %}
            <div class="alert alert-error">
                <button type="button" class="close" data-dismiss="alert">×</button>
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.session.flashbag.get('message') %}
            <div class="alert alert-info">
                <button type="button" class="close" data-dismiss="alert">×</button>
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">×</button>
                {{ message }}
            </div>
        {% endfor %}
        {% block page_header %}{% endblock %}
        {% block body %}{% endblock %}
        <!-- modal -->
        <div id="box" class="modal hide fade" role="dialog">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 id="myModalLabel"></h3>
            </div>
            <div class="modal-body"></div>
        </div>
        <!-- modal -->
    </div>
    <div class="sidebar right"></div>
</div>
<div class="footer" style="clear:both;width:100%;text-align:center;padding: 15px 0;">
    <footer>
        <p style="font-size:11px;">&copy;2013 {{ sitename }} - Conditions d'utilisation</p>
    </footer>
</div>
{%  endif %}
{% block javascripts %}
    <script src="{{ asset('js/jquery-1.8.2.min.js') }}"></script>
    <script src="{{ asset('bundles/admin/js/bootstrap/bootstrap.min.js') }}"></script>
    <!-- Plugins -->
    <script src="{{ asset('bundles/admin/js/plugins/maskedinput/jquery.maskedinput-1.3.min.js') }}"></script>
    <script src="{{ asset('bundles/admin/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js') }}"></script>
    <script src="{{ asset('bundles/admin/js/plugins/jquery.mousewheel.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/cms/js/plugins/ckeditor/ckeditor.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/admin/js/plugins/datepicker/bootstrap-datepicker.js') }}"></script>
    <!-- Common -->
    <script src="{{ asset('bundles/site/js/admin/simplenso.js') }}"></script>
    <script src="{{ asset('bundles/admin/js/common.js') }}"></script>
{% endblock %}
</body>
</html>