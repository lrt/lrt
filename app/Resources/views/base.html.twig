<body>
<div id="fb-root"></div>
<div id="header">
    <div class="container">
        <div class="row-fluid">
            <div id="logo">
                <a href="{{ path('home') }}" title="Accueil">
                    <img alt="Logo {{ sitename }}" src="{{ asset('bundles/site/images/themes/logo.png') }}" class="hide1">
                </a>
            </div><!-- /logo -->
            <div id="menu">
                <div class="navbar pull-right">
                    <div class="navbar-inner">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a><!-- /nav-collapse -->
                        <div class="nav-collapse collapse">
                            <ul class="nav">
                                <li class="active"><a href="{{ path('home') }}">Accueil</a></li>
                                <li><a href="{{ path('show_page', { 'page': 'about' }) }}">L'association</a></li>
                                <li><a href="{{ path('blog') }}">Blog</a></li>
                                <li><a href="{{ path('contact') }}">Contact</a></li>
                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <li><a title="Mon Compte" href="{{ path('dashboard') }}">Mon compte</a></li>
                                {%  else %}
                                    <li><a title="Mon Compte" href="{{ path('fos_user_security_login') }}">Mon compte</a></li>
                                {% endif %}
                            </ul><!-- /nav -->
                        </div><!-- /nav-collapse -->
                    </div><!-- /navbar-inner -->
                </div><!-- /navbar -->
            </div><!-- /span9 -->
        </div> <!-- /row-fluid -->
    </div><!-- /container -->
</div><!-- /header -->

{% include ':Themes:messages.html.twig' %}

{% block body %}{% endblock %}

