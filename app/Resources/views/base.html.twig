        </div>
        <div class="row-fluid margin-top-20">
            <div class="span12">
                <div id="quick-menu" class="span6 pull-right">
                    <ul class="menu white pull-right">
                        <li><a title="Accueil" href="{{ path('home') }}">Accueil</a></li>
                        <li><a title="L'association" href="{{ path('show_page', { 'page': 'about' }) }}">L'association</a></li>
                        <li><a title="Blog" href="{{ path('blog') }}">Blog</a></li>
                        <li><a title="Contact" href="{{ path('contact') }}">Contact</a></li>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
