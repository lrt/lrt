<head>
    <meta charset="utf-8">
    <title>{% block title %}{{ sitename }}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    {% block stylesheets %}
    <link href="{{ asset('bundles/site/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/site/css/themes/style.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/site/css/themes/video-js.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/site/css/themes/jquery.fancybox.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/site/css/bootstrap-wysihtml5.css') }}" rel="stylesheet">
    {% endblock %}
