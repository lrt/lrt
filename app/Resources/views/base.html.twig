            <div class="span3">
                <h4>Derniers articles</h4>
                {% render "CMSBundle:Article:lastArticle" %}
            </div>
            <div class="span3">
                <h4>Contact</h4>
                <span class="grey-light">Par mail :</span>&nbsp;<a href="mailto:longchamp-roller-team@laposte.net" class="">longchamp-roller-team@laposte.net</a>
                <div class="margin-top-5">
                    <a href="{{ path('contact') }}">
                        <img  src="{{ asset('bundles/site/images/themes/map.jpg') }}" alt="map" class="img-rounded tooltips" data-original-title="View our location">
