{% extends '::admin.html.twig' %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('event') }}">Evènements</a> <span class="divider">/</span>
    </li>
    <li class="active">Modifier l'évènement</li>
{% endblock %}

{% block body %}
<div class="box">
    <h4 class="box-header round-top">
        Modifier l'évènement
    </h4>
    <div class="box-container-toggle">
        <div class="box-content">
            {% form_theme edit_form 'AdminBundle:Themes:form.html.twig' %}
            <form action="{{ path('event_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                {{ form_widget(edit_form) }}
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary"><i class="icon-check icon-white"></i> Modifier</button>
                    <a href="{{ path('event') }}" class="btn">
                        <i class="icon-list"></i> Retour à la liste
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        //<![CDATA[
        var editor = CKEDITOR.replace( 'lrt_calendarbundle_eventtype[description]' );
        //]]>
    </script>
{% endblock %}
