{% extends '::base.html.twig' %}

{% block body %}
<div id="page">
    <div class="container">
        <h2>Devenir adhérent ?</h2>
    </div>
</div>
<div id="body">
    <div class="container">
        <div class="row-fluid">
            <div class="span8">
                <img src="{{ asset('bundles/site/images/themes/slider/image2.png') }}">
            </div>
            <div class="span4 adhesion form-horizontal">
                <div class="control-group">
                    Nom
                    <div class="controls">
                    {{ entity.firstName }} {{ entity.lastName }}
                    </div>
                </div>
                <div class="control-group">
                    Adresse
                    <div class="controls">
                        {{ entity.address }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        {{ entity.zipCode }} {{ entity.city }}
                    </div>
                </div>
                <div class="control-group">
                    Date de naissance
                    <div class="controls">
                        {{ entity.birthday|date('d/m/Y') }}
                        <span class="help-inline">01/01/2000</span>
                    </div>
                </div>
                <div class="control-group">
                    Sexe
                    <div class="controls">
                        {{ entity.gender }}
                    </div>
                </div>
                <div class="control-group">
                    Numéro de téléphone mobile
                    <div class="controls">
                        {{ entity.phone }}
                    </div>
                </div>
                <div class="control-group">
                    Votre adresse e-mail actuelle
                    <div class="controls">
                        {{ entity.email }}
                    </div>
                </div>
                <a href="{{ path('adhesion_new') }}" class="btn">
                    <i class="icon-check"></i> Modifier
                </a>
                <a href="{{ path('adhesion_create') }}" class="btn">
                    <i class="icon-ok-sign"></i> Confirmer
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
