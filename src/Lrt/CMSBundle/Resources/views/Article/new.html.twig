{% extends ':Admin:base.html.twig' %}

{% block box_title %}
   Ajouter un article
{% endblock %}

{% block body %}
<div class="span12">
    <h4 class="header">Ajouter un article</h4>
    {% form_theme form ':Themes:form.html.twig' %}
    <form action="{{ path('article_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
        {{ form_widget(form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="icon-check icon-white"></i> Valider</button>
            <a href="{{ path('article') }}" class="btn">
                <i class="icon-list"></i> Retour Ã  la liste
            </a>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/site/js/wysihtml5-0.3.0.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/site/js/bootstrap-wysihtml5.js') }}"></script>
    <script type="text/javascript">
        $('#lrt_cmsbundle_articletype_content').wysihtml5();
    </script>
{% endblock %}
   