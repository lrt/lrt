{% extends '::admin.html.twig' %}

{% block breadcrumb %}
<li>
    <a href="{{ path('article') }}">Articles</a> <span class="divider">/</span>
</li>
<li class="active">All</li>
{% endblock %}

{% block menu %}
<li class="nav-header">Article</li>
<li><a href="{{ path('article_new') }}">Ajouter</a></li>
<li class="active"><a href="{{ path('article') }}">Liste des articles</a></li>
<li><a href="#">Article(s) en attente</a></li>
<li><a href="{{ path('article_draft') }}">Brouillons</a></li>
<li><a href="{{ path('category') }}">Rubrique</a></li>
<li><a href="{{ path('article_bin') }}">Corbeille</a></li>
{% endblock %}

{% block page_header %}
    <div class="row-fluid" style="border-bottom: 1px solid #eeeeee;margin-bottom: 18px;">
        <div class="span8 m-botton-group">
            <h4>Liste des articles</h4>
        </div>
        <div class="span4">
            <div class="btn-group pull-right">
                <a class="btn btn-danger" href="{{ path('article_new') }}">
                    Ajouter un article
                </a>
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="icon-cog"></i>
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a data-toggle="modal" href="{{ path('export_article') }}"><i class="icon-download-alt"></i> Exporter la liste</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
<div id="filtres">
    <div id="titreFiltres">
        <h4>filtres</h4>
    </div>
    <div id="contentFiltres">
        <form action="{{ path('article') }}" method="get" class="form-inline">
            {{ form_widget(form.title,{ 'attr': {'placeholder': 'titre'} }) }} {{ form_widget(form.category) }} <br><br>
            {{ form_widget(form.status) }} {{ form_widget(form.isPublic) }} <br><br>
            {{ form_rest(form) }}
            <a href="{{ path('article') }}" class="btn btn-small raz-filter" data-href="{{ path('article') }}">
                <i class="icon-refresh"></i>
                 Réinitialiser
            </a>
            <button type="submit" class="btn btn-small btn-primary"><i class="icon-filter icon-white"></i>Filtrer</button>
        </form>
    </div>
</div>
<hr>
<table class="table table-striped tListeArticles">
    <thead>
        <tr>
            <th></th>
            <th>Contenu</th>
            <th>Date</th>
            <th>Rubrique</th>
            <th>Active</th>
            <th>Visibilité</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td>
                {% if entity.path is not null %}
                    <img width="100" height="75" src="{{ asset(entity.path) }}" data-original="{{ asset(entity.path) }}" alt="Prévisualiser" title="Prévisualiser" class="preview">
                {% else %}
                    <img width="100" height="75" src="{{ asset('bundles/admin/img/example_mini.jpg') }}" alt="Prévisualiser" title="Prévisualiser" class="preview">
                {%  endif %}
            </td>
            <td>
                <div class="space_half">
                    <img src="{{ asset('bundles/site/images/page.png') }}" alt="Prévisualiser" title="Prévisualiser" class="preview">
                    <a class="title_preview" title="Modifier" href="{{ path('article_edit', { 'id': entity.id }) }}">{{ entity.id }} - <b>{{ entity.title }}</b></a>
                </div>
                {{ entity.content|raw|truncate(50) }}
                ( posté par  <a title="" href="#">{{ entity.user }}</a> )
            </td>
            <td>{{ entity.dateSubmission|date('d/m/Y h:m') }}</td>
            <td>{{ entity.category.name }}</td>
            <td>
                {% if entity.isValid == 1 %}
                    <i class="icon-ok"></i>
                {% endif %}
            </td>
            <td>
                {% if entity.isPublic == 1 %}
                Public
                {% else %}
                Privé
                {% endif %}
            </td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
                        Action
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li>
                            <a data-toggle="modal" rel="{{ entity.title }}" href="{{ path('article_show', { 'id': entity.id }) }}" class="popin">
                                <i class="icon-zoom-in"></i>
                                Voir
                            </a>
                        </li>
                        {% if entity.status == 3 %}
                        <li>
                            <a href="{{ path('article_edit', { 'id': entity.id }) }}">
                                <i class="icon-edit"></i>
                                Modifier
                            </a>
                            <a href="{{ path('article_delete', { 'id': entity.id }) }}">
                                <i class="icon-trash"></i>
                                Corbeille
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </td>
        </tr>
        {% else %}
        <tr>
            <td>Aucun article ne correspond à votre recherche</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}