{% extends '::base.html.twig' %}

{% block body %}
<div id="body">
    <div class="container">
        <div class="row-fluid blog">
            <div class="span9">
                <div class="row-fluid">
                    <div class="span3">
                        <div class="date">
                            <div class="published">
                                <div class="day pull-left">{{ article.dateSubmission|date('d') }}</div>
                                <div class="month pull-right">{{ article.dateSubmission|date('M Y') }}</div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="author">
                            par {{ article.user.username }}
                        </div>
                        <div class="tags">
                            <i class="icon-tags"></i>
                            <span class="label"><a href="">{{ article.category.name }}</a></span>
                        </div>
                    </div>
                    <div class="span9">
                        <h3>{{ article.title }}</h3>
                        <p>
                        {% if article.path is not null %}
                            <img width="605" height="400" src="{{ asset(article.path) }}" data-original="{{ asset(article.path) }}" alt="" />
                        {% else %}
                            <img width="605" height="400" src="{{ asset('bundles/site/images/no_picture.png') }}" data-original="{{ asset('bundles/site/images/no_picture.png') }}" alt="" />
                        {%  endif %}</p>
                        <p>{{ article.content | raw }}</p>
                    </div>
                </div>
                <hr class="solid visible-desktop">
                <div class="row-fluid visible-desktop">
                    <div class="span12">
                        <h4 class="title grey">Vos commentaires</h4>
                        <div class="fb-comments" data-href="http://longchamp-roller-team.com" data-num-posts="2" data-width="620"></div>
                    </div>
                </div>
            </div>
            <div class="span3">
                <h3 class="">Cat√©gories</h3>
                <div class="clearfix bottom-20 margin-top-10">
                    <ul class="nav nav-list">
                        {% for c in categories %}
                            {% if c.name == article.category.name %}
                                <li class="active bold"><a href="#"><i class="icon-chevron-left"></i> {{ c.name }}</a></li>
                            {% else %}
                                <li><a href="#"><i class="icon-chevron-left"></i> {{ c.name }}</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
                <hr class="dashed">
                <h3>Nous suivre sur Facebook</h3>
                <div class="fb-like-box" data-href="http://www.facebook.com/pages/Longchamp-Roller-Team/355637923045" data-width="292" data-show-faces="true" data-stream="false" data-header="false"></div>
                <hr class="dashed">
                <h3>Nos partenaires</h3>
                <img alt="Cabinet IENA" style="cursor: pointer;" onclick="window.open('http://www.cabinet-iena.com');" width="100" height="100" src="{{ asset('uploads/partners/logos/iena.jpg') }}">
                <img alt="Matis Group" style="cursor: pointer;" onclick="window.open('http://www.matis-group.com/');" width="100" height="100" src="{{ asset('uploads/partners/logos/logo-matis.png') }}">
                <img alt="Arcade Groupe" style="cursor: pointer;" onclick="window.open('http://www.arcade-groupe.com/');" width="100" height="100" src="{{ asset('uploads/partners/logos/groupe_arcade.gif') }}">
                <img alt="Synergie" style="cursor: pointer;" onclick="window.open('http://www.synergie.fr/');" width="100" height="100" src="{{ asset('uploads/partners/logos/synergie.jpg') }}">
                <hr class="dashed">
                <h3>Ligne droite sur votre mobile</h3>
                <img src="{{ asset('uploads/partners/logos/ligne_droite_qrcode.JPG') }}">   
            </div>
        </div>
    </div>
</div>
{% endblock %}