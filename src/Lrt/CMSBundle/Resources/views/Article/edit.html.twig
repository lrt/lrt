{% extends 'AdminBundle:Themes:box.html.twig' %}

{% block breadcrumb %}
<li>
    <a href="{{ path('article') }}">Articles</a> <span class="divider">/</span>
</li>
<li class="active">Modifier l'article {{ entity.title }}</li>
{% endblock %}

{% block box_title %}
    Modifier l'article "{{ entity.title }}"
{% endblock %}

{% block box_content %}
    {% form_theme edit_form 'AdminBundle:Themes:form.html.twig' %}
    <form action="{{ path('article_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="icon-check icon-white"></i> Valider</button>
            <a href="{{ path('article') }}" class="btn">
                <i class="icon-list"></i> Retour Ã  la liste
            </a>
        </div>
    </form>
{% endblock %}
    
{% block javascripts %} 
   {{ parent() }}
   <script type="text/javascript" src="{{ asset('bundles/cms/js/plugins/ckeditor/ckeditor.js') }}"></script>
