{% extends ':Admin:base.html.twig' %}

{% block breadcrumb %}
<li class="active">Modifier l'article {{ article.title }}</li>
{% endblock %}

{% block box_title %}
    Modifier l'article "{{ article.title }}"
{% endblock %}

{% block body %}
<div class="row-fluid">
    <div class="span12">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="icon-align-justify"></i>
                </span>
                <h5>Ajouter un article</h5>
            </div>
            {% form_theme edit_form ':Themes:form.html.twig' %}
            <form action="{{ path('article_update', { 'id': article.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
                {{ form_widget(edit_form) }}
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary"><i class="icon-check icon-white"></i> Valider</button>
                    <a href="{{ path('article') }}" class="btn">
                        <i class="icon-list"></i> Retour Ã  la liste
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
    
{% block javascripts %} 
   {{ parent() }}
   <script type="text/javascript">
       CKEDITOR.replace( 'lrt_cmsbundle_articletype[content]', {
           uiColor: '#FAFAFA'
       });
   </script>    
{% endblock %} 