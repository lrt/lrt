{% extends ':Admin:base.html.twig' %}

{% block body %}
<div class="span12">
    <div class="buttons">
        <a href="{{ path('category_new') }}"><button class="btn pull-right" type="button"><i class="icon-plus"></i> Ajouter une catégorie</button></a>
    </div>
    <h4 class="header">Liste des catégories</h4>
    <table class="table table-striped table-bordered sortable tListeCat">
        <thead>
            <tr>
                <th>Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.name }}</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
                                Action
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li>
                                    <a data-toggle="modal" rel="{{ entity.name }}" href="{{ path('category_show', { 'id': entity.id }) }}" class="popin">
                                        <i class="icon-zoom-in"></i>
                                        Voir
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('category_edit', { 'id': entity.id }) }}">
                                        <i class="icon-edit"></i>
                                        Modifier
                                    </a>
                                    <a href="{{ path('category_delete', { 'id': entity.id }) }}">
                                        <i class="icon-trash"></i>
                                        Corbeille
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
