{% extends '::admin.html.twig' %}

{% block page_header %}
    <div class="row-fluid" style="border-bottom: 1px solid #eeeeee;margin-bottom: 18px;">
        <div class="span8 m-botton-group">
            <h4>Liste des adhésions</h4>
        </div>
        <div class="span4">
            <div class="btn-group pull-right">
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="icon-cog"></i>
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="{{ path('export_user') }}"><i class="icon-download-alt"></i> Exporter la liste</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <table class="table table-striped tListeUsers">
        <thead>
        <tr>
            <th>Identifiant</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Demandé le</th>
            <th>Validé le</th>
            <th>Statut</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for u in users %}
            <tr>
                <td><a href="{{ path('user_edit', { 'id': u.id }) }}">{{ u.username }}</a></td>
                <td>{{ u.firstName }} </td>
                <td>{{ u.lastName }}</td>
                <td>{{ u.email|replace({'@': '[@]'}) }}</td>
                <td>{{ u.dateSubmission|date('d/m/Y') }}</td>
                <td>
                    {%  if u.dateValidation is not null %}
                        {{ u.dateValidation|date('d/m/Y') }}
                    {% endif %}
                </td>
                <td>
                    {% if u.isEnabled == 1 %}
                        <span class="label label-success">Activé</span>
                    {% else %}
                        <span class="label label-important">Non activé</span>
                    {% endif %}
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
                            Action
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="{{ path('user_edit', { 'id': u.id }) }}"><i class="icon-edit"></i> Modifier</a></li>
                            {% if u.isEnabled == 0 %}
                                <li><a href="{{ path('activate_user', { 'id': u.id }) }}"><i class="icon-ok"></i> Activer</a></li>
                                <li><a href="{{ path('user_edit', { 'id': u.id }) }}"><i class="icon-repeat"></i> Relancer</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </td>
            </tr>
        {%  else %}
            <tr><td>Aucune nouvelle adhésion trouvée.</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}