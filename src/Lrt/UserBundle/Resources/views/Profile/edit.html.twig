{% extends '::admin.html.twig' %}

{% block breadcrumb %}
    <li>Profil <span class="divider">/</span></li>
    <li class="active">{{ app.user.username }}</li>
{% endblock %}

{% block body %}
<div class="row-fluid">
    <div class="span3">
        <div class="test">
            <a href="">Nhl57</a>
            <a href="">
                <img src="{{ asset('bundles/admin/img/users/aqvatarius.jpg') }}" class="img-polaroid"/>
            </a>
            <div class="uploader"><input type="file" name="image" style="opacity: 0;" size="19"><span class="filename">No file selected</span><span class="action">Choose File</span></div>
        </div>
        <div class="block-fuild without-head">
        </div>
    </div>
    <div class="span6">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#home"><i class="icon-user"></i> Informations sur le compte</a></li>
            <li><a href="#profile"><i class="icon-wrench"></i> Param√®tres de compte</a></li>
        </ul>
        <form action="{{ path('user_update', { 'id': user.id }) }}" method="post" {{ form_enctype(form) }} class="form-horizontal"  >
        <div class="tab-content">
            <div class="tab-pane active" id="home">

                <div class="control-group">
                    {{ form_label(form.firstName, label|default(null), {'label_attr': {'class': 'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(form.firstName) }}
                    </div>
                </div>
                <div class="control-group">
                    {{ form_label(form.lastName, label|default(null), {'label_attr': {'class': 'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(form.lastName) }}
                    </div>
                </div>
                <div class="control-group">
                    {{ form_label(form.birthday, label|default(null), {'label_attr': {'class': 'control-label'}}) }}
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-calendar"></i></span>
                            {{ form_widget(form.birthday) }}
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-danger pull-right"><i class="icon-check icon-white"></i> Enregistrer les modifications</button>
            </div>
            <div class="tab-pane" id="profile">
                {{ form_label(form.username) }}
                {{ form_widget(form.username) }}

                <div class="control-group">
                    {{ form_label(form.email) }}
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-envelope"></i></span>
                            {{ form_widget(form.email) }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
        {{ form_rest(form) }}
        </form>
    </div>
    <div class="span3">
        <div class="box">
            <h4 class="box-header round-top">
                <i class="icon-lock"></i>
                Modifier mon mot de passe
            </h4>
            <div class="box-container-toggle">
                <div class="box-content">
                    <form action="{{ path('fos_user_change_password') }}" method="post" {{ form_enctype(form_pass) }}>
                        {{ form_widget(form_pass) }}
                        <button type="submit" class="btn btn-primary"><i class="icon-check icon-white"></i> Modifier</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span6"></div>
    <div class="span6"></div>
</div>
{% endblock %}

{%  block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $('#myTab a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
{% endblock %}