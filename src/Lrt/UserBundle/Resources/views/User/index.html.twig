{% extends '::admin.html.twig' %}

{% block breadcrumb %}
<li>
    <a href="{{ path('user') }}">Utilisateurs</a> <span class="divider">/</span>
</li>
<li class="active">Liste</li>
{% endblock %}

{% block menu %}
    <li class="nav-header">Utilisateur</li>
    <li><a href="{{ path('user_new') }}">Ajouter</a></li>
    <li><a href="{{ path('user') }}">Liste des utilisateurs</a></li>
    <li><a href="#">Utilisateur(s) en attente</a></li>
{% endblock %}

{% block body %}
<div class="box">
    <h4 class="box-header round-top">
        <i class="icon-user"></i>
        Liste des utilisateurs ({% if nb is defined %}{{ nb }}{% endif %})
        <a class="box-btn" title="close">
            <i class="icon-remove"></i>
        </a>
        <a class="box-btn" title="toggle">
            <i class="icon-minus"></i>
        </a>
        <a class="box-btn" title="#box-config-modal" data-toggle="modal" title="config">
            <i class="icon-cog"></i>
        </a>
    </h4>
    <div class="box-container-toggle">
        <div class="box-content">
            <div id="filtres">
                <div id="titreFiltres">
                    <h4>filtres</h4>
                </div>
                <div id="contentFiltres">
                    <form action="{{ path('user') }}" method="get" class="form-inline">
                        {{ form_widget(form.login,{ 'attr': {'placeholder': 'login'} }) }} {{ form_widget(form.nom,{ 'attr': {'placeholder': 'nom'} }) }} 
                        {{ form_widget(form.email,{ 'attr': {'placeholder': 'email'} }) }}  <br><br>
                        {{ form_widget(form.type) }} {{ form_widget(form.status) }} <br><br>
                        {{ form_rest(form) }}
                        <a href="{{ path('user') }}" class="btn btn-small raz-filter" data-href="{{ path('user') }}">
                            <i class="icon-refresh"></i>
                             Réinitialiser
                        </a>
                        <button type="submit" class="btn btn-small btn-primary"><i class="icon-filter icon-white"></i>Filtrer</button>
                    </form>
                </div>
            </div>
            <hr>
            <table class="table table-striped tListeUsers">
                <thead>
                    <tr>
                        <th>Login</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Statut</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.username }}</td>
                        <td>
                            <a href="{{ path('user_show', { 'id': entity.id }) }}">
                            {{ entity.firstName }} {{ entity.lastName }}
                            </a>
                        </td>
                        <td>{{ entity.email|replace({'@': '[@]'}) }}</td>
                        <td>
                            {% for role in entity.roles %}
                                {% if role != 'ROLE_USER' %}
                                {{ role | lower | replace({'role_':''}) }}
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            {% if entity.isEnabled == 1 %}
                                <span class="label label-success">Activé</span>
                            {% else %}
                                <span class="label label-important">Non activé</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-small btn-info">
                                <i class="icon-edit icon-white"></i>
                                Modifier le compte
                            </a>
                        </td>
                    </tr>
                {%  else %}
                    <tr><td>Aucun utilisateur trouvée.</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<a href="{{ path('user_new') }}" class="btn btn-small btn-primary">
    Créer un nouvel utilisateur
</a>
{% endblock %}

