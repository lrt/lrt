{% extends '::admin.html.twig' %}

{% block breadcrumb %}
<li>
    <a href="{{ path('user') }}">Utilisateurs</a> <span class="divider">/</span>
</li>
<li class="active">Modifier l'utilisateur "{{ entity.username }}"</li>
{% endblock %}

{% block body %}
<div class="box">
    <h4 class="box-header round-top">
        Modifier l'utilisateur "{{ entity.username }}"
    </h4>
    <div class="box-container-toggle">
        <div class="box-content">
            <form action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                {{ form_widget(edit_form) }}
                <p>
                    <button type="submit">Modifier</button>
                </p>
            </form>
        </div>
    </div>
</div>
<a href="{{ path('user') }}" class="btn btn-small btn-primary">
    Retour Ã  la liste
</a>
{% endblock %}