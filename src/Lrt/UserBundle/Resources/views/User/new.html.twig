{% extends '::admin.html.twig' %}

{% block breadcrumb %}
<li>
    <a href="{{ path('user') }}">Utilisateurs</a> <span class="divider">/</span>
</li>
<li class="active">Ajouter un utilisateur</li>
{% endblock %}

{% block body %}
<div class="box">
    <h4 class="box-header round-top">
        Ajouter un utilisateur
    </h4>
    <div class="box-container-toggle">
        <div class="box-content">
            <form action="{{ path('user_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
                <div class="control-group">
                    {{ form_label(form.username, null, {'label_attr': {'class': 'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(form.username) }}
                    </div>
                </div>
                <div class="control-group">
                    {{ form_label(form.firstName, null, {'label_attr': {'class': 'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(form.firstName) }}
                    </div>
                </div>
                <div class="control-group">
                    {{ form_label(form.lastName, null, {'label_attr': {'class': 'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(form.lastName) }}
                    </div>
                </div>
                <div class="control-group">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(form.email) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        {{ form_widget(form.plainPassword) }}
                    </div>
                </div>
                {{ form_rest(form) }}
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Valider</button> 
                    <a href="{{ path('user') }}" class="btn">
                        Retour Ã  la liste
                    </a>
		</div>
            </form>
        </div>
    </div>
</div>
{% endblock %}