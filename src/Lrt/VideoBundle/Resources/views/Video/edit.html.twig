{% extends 'AdminBundle:Themes:box.html.twig' %}

{% block breadcrumb %}
<li>
    <a href="{{ path('video') }}">Vidéos</a> <span class="divider">/</span>
</li>
<li class="active">Modifier la vidéo {{ entity.title }}</li>
{% endblock %}

{% block box_title %}
    Modifier la vidéo "{{ entity.title }}"
{% endblock %}

{% block box_content %}
    <form action="{{ path('video_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>
{% endblock %}

{% block box_button %}
    <ul class="record_actions">
        <li>
            <a href="{{ path('video') }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}