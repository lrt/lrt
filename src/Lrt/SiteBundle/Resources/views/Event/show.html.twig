<h1>Event</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Titre</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Datedeb</th>
            <td>{{ entity.dateDeb|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Dateend</th>
            <td>{{ entity.dateEnd|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Lieux</th>
            <td>{{ entity.place }}</td>
        </tr>
        <tr>
            <th>Website</th>
            <td>{{ entity.website }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('event') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('event_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('event_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
