{% extends ':Admin:base.html.twig' %}

{% block body %}
<div class="row-fluid">
    <div class="span12">
        <h5>Modifier l'évènement</h5>
        {% form_theme edit_form ':Themes:form.html.twig' %}
        <form action="{{ path('event_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_widget(edit_form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-primary"><i class="icon-check icon-white"></i> Modifier</button>
                <a href="{{ path('event') }}" class="btn">
                    <i class="icon-list"></i> Retour à la liste
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        //<![CDATA[
        var editor = CKEDITOR.replace( 'lrt_calendarbundle_eventtype[description]' );
        //]]>
    </script>
{% endblock %}
