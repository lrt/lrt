    <div id="body">
        <div class="container">
            <div class="row-fluid blog">
                <div class="span9">
                    {% for a in articles %}
                    <div class="row-fluid">
                        <div class="span3">
                            <div class="date">
                                <div class="published">
                                    <div class="day pull-left">12</div>
                                    <div class="month pull-right">JAN 2012</div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <div class="author">
                                par {{ a.user.firstName }} {{ a.user.lastName }}
                            </div>
                            <div class="tags">
                                <i class="icon-tags"></i>
                                <span class="label"><a href="">HTML5</a></span>
                                <span class="label"><a href="">CSS3</a></span>
                                <span class="label"><a href="">Photography</a></span>
                                <span class="label"><a href="">Design</a></span>
                            </div>
                            <div class="comments">
                                <i class="icon-comments"></i> <a href="blog_post.html#comments">10 comments</a>
                            </div>
                        </div>
                        <div class="span9">
                            <h3>{{ a.title }}</h3>
                            <p>
                                {% if a.path is not null %}
                                    <img src="{{ asset(a.path) }}" data-original="{{ asset(a.path) }}" alt="" />
                                {% else %}
                                    <img src="{{ asset('bundles/site/images/no_picture.png') }}" data-original="{{ asset('bundles/site/images/no_picture.png') }}" alt="" />
                                {%  endif %}
                            </p>
                            <p>{{ a.content | truncate(350) | raw }}</p>
                            <p>
                                <a class="btn pull-right" href="{{ path('article_view', { 'id': a.id }) }}">Lire la suite ...</a>
                            </p>
                        </div>
                    </div>
                    <hr class="solid">
