<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>Ajouter une vidéo</h3>
</div>
{% form_theme form ':Themes:form.html.twig' %}
<form action="{{ path('video_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <div class="modal-body">
        {{ form_widget(form) }}
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal"><i class="icon-list"></i> Retour à la liste</a>
        <button id="add-event-submit" type="submit" class="btn btn-primary"><i class="icon-check icon-white"></i> Valider</button>
    </div>
</form>