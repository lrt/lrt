{% extends 'AdminBundle:Themes:box.html.twig' %}

{% block breadcrumb %}
<li>
    <a href="{{ path('video') }}">Vidéos</a> <span class="divider">/</span>
</li>
<li class="active">Modifier la vidéo {{ entity.title }}</li>
{% endblock %}

{% block box_title %}
    Modifier la vidéo "{{ entity.title }}"
{% endblock %}

{% block box_content %}
    {% form_theme edit_form 'AdminBundle:Themes:form.html.twig' %}
    <form action="{{ path('video_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="icon-check icon-white"></i> Valider</button>
            <a href="{{ path('video') }}" class="btn">
                <i class="icon-list"></i> Retour à la liste
            </a>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/cms/js/plugins/ckeditor/ckeditor.js') }}"></script>
    <script type="text/javascript">
        //<![CDATA[
        var editor = CKEDITOR.replace( 'lrt_videobundle_videotype[description]' );
        //]]>
    </script>
{% endblock %}