{% extends ':Admin:base.html.twig' %}

{% block title_page %}
    Vidéo
{% endblock %}

{% block breadcrumb %}
<li>
    <a href="{{ path('video') }}">Vidéos</a> <span class="divider">/</span>
</li>
<li class="active">Liste</li>
{% endblock %}

{% block body %}
<div class="row-fluid">
    <div class="span12">
        <div class="hero-unit" style="padding:10px;background: #FFF;">
            <form action="{{ path('video') }}" method="get" class="form-inline">
                {{ form_widget(form.title,{ 'attr': {'placeholder': 'titre'} }) }}
                {{ form_widget(form.status) }} {{ form_widget(form.isPublic) }}
                {{ form_rest(form) }}
                <a href="{{ path('video') }}" class="btn btn-small raz-filter" data-href="{{ path('video') }}">
                    <i class="icon-refresh"></i>
                    Réinitialiser
                </a>
                <button type="submit" class="btn btn-small btn-primary"><i class="icon-filter icon-white"></i>Filtrer</button>
            </form>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="icon-play-circle"></i>
                </span>
                <h5>Videos</h5>
                <div class="buttons">
                    <a id="add-event" data-toggle="modal" href="#modal-add-event" class="btn btn-success btn-mini"><i class="icon-plus icon-white"></i> Ajouter une vidéo</a>
                    <div class="modal hide" id="modal-add-event">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">×</button>
                            <h3>Ajouter une vidéo</h3>
                        </div>
                        <div class="modal-body">
                            {% render "SiteBundle:Video:new" %}
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
                            <a href="{{ path('video_new') }}" id="add-event-submit" class="btn btn-primary">Add event</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="widget-content">
                <ul class="thumbnails">
                    {% for entity in entities %}
                    <li class="span2">
                        <a href="#" class="thumbnail">
                            <img src="http://placehold.it/140x140" alt="">
                        </a>
                        <div class="actions">
                            <a title="" href="{{ path('video_edit', { 'id': entity.id }) }}"><i class="icon-pencil icon-white"></i></a>
                            <a title="" href="{{ path('video_show', { 'id': entity.id }) }}"><i class="icon-search icon-white"></i></a>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}