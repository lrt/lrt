            {{ form_widget(edit_form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-primary"><i class="icon-check icon-white"></i> Modifier</button>
                <a href="{{ path('partner') }}" class="btn">
                    <i class="icon-list"></i> Retour Ã  la liste
                </a>
            </div>
        </form>
    </div>
</div>                
{% endblock %}